<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/student_main">

    <Button
        android:id="@+id/read_grade"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="查看成绩"
        android:textSize="24dp"></Button>

    <Button
        android:id="@+id/read_basic_information"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="查看与修改基本信息"
        android:textSize="24dp"></Button>

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blank_fragment"
        android:name="com.wqf.studentmanagement.Fragment.BlankFragment">
    </fragment>
</LinearLayout>